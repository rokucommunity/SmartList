<?xml version='1.0' encoding='utf-8'?>
<component
    name='ImageFader'
    extends='Rectangle'>
  <interface>
    <field
        id='size'
        type='array'
        value='[1920,1080]' />
    <field
        id='uri'
        type='string' />
    <field
        id='isAnimated'
        type='boolean'
        value='true' />
    <field
        id='isInitialized'
        type='boolean'
        value='false' />
    <!--Set
    color of background while image is loading.-->
    <!-- <field
        id='shadeOpacity'
        type='float'
        alias='shade.opacity' /> -->
    <field
        id='backgroundColor'
        alias='backgroundColor.color' />
    <!-- args = {uri: string, isAnimated: boolean} -->
    <function name='changeImage' />
    <function name='_initialize' />
  </interface>

  <children>
    <Rectangle
        id='backgroundColor'
        color='0x000000FF' />
    <Poster id='oldBackground' />
    <Poster
        id='background'
        opacity='0' />
    <!-- <Rectangle
        id='shade'
        color='0x000000'
        opacity='0.65' /> -->

    <SequentialAnimation id='crossFadeAnim'>
      <Animation
          id='fadeInAnimation'
          repeat='false'
          easeFunction='linear'
          duration='0.5'>
        <FloatFieldInterpolator
            id='backgroundInterpolator'
            key='[0.0, 1.0]'
            keyValue='[0.0, 1.0]'
            fieldToInterp='background.opacity' />
      </Animation>

    </SequentialAnimation>
  </children>
</component>