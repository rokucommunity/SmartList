    protected function getPage2()
      return [
        ["Add ", m.makeViews],
        ["LIST Animations", function(): m.showScreen(m.createSGNode("ListAnimationSpikeScreen")): end function]
        ["Remove ", function()
            for each view in m.views
              view.getParent().removeChild(view)
            end for
            m.views = []
        end function]
        ["Buttons", function(): m.showScreen(m.createSGNode("ButtonScreen")): end function]
        ["Scroll screen", function(): m.showScreen(m.createSGNode("ScrollScreen")): end function]
