{
  "name": "SmartList-sample-maestro",
  "version": "0.0.1",
  "description": "SmartList sample for maestro framework",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "@rokucommunity/bslib": "^0.1.1",
    "log": "npm:roku-log@^0.10.1",
    "maestro": "npm:maestro-roku@0.62.1"
  },
  "devDependencies": {
    "@rokucommunity/bslint": "0.8.1",
    "@types/fs-extra": "^9.0.13",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "brighterscript": "^0.64.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "find-in-files": "^0.5.0",
    "fs-extra": "^10.1.0",
    "maestro-roku-bsc-plugin": "0.29.1",
    "path": "^0.12.7",
    "roku-deploy": "3.7.0",
    "roku-log-bsc-plugin": "0.8.1",
    "rooibos-roku": "5.4.2",
    "ropm": "0.10.5",
    "scenegraph-schema": "^0.2.1",
    "telnet-client": "1.4.11",
    "ts-node": "^10.4.0",
    "typescript": "4.2.4",
    "util": "^0.12.5"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rokucommunity/SmartList.git"
  },
  "private": true,
  "keywords": [
    "brightscript",
    "list",
    "fun"
  ],
  "author": "Tantawowa LLC",
  "license": "UNLICENSED",
  "homepage": "",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist",
    "noprefix": [
      "maestro"
    ]
  },
  "auto-changelog": {
    "template": "changelog.hbs",
    "commitLimit": false,
    "tag-pattern": ".+"
  },
  "scripts": {
    "postinstall": "npm run build-scripts && npm run ropm",
    "ropm": "ropm copy",
    "build": "node scripts/run prod",
    "build-scripts": "rm -rf build-scripts && npx tsc",
    "build-dev": "node scripts/run.js dev",
    "lint": "npx bslint",
    "tslint": "eslint \"scripts/**/*.ts\""
  }
}
