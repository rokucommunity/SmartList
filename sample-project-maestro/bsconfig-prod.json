{
  "extends": "bsconfig.json",
  "files": [
    "!**/*.i8n.json",
    "manifest",
    "source/**/*.*",
    "images/**/*.*",
    "sounds/**/*.*",
    "fonts/**/*.*",
    "components/**/*.*",
    "meta/**/*.*",
    { "src": "../src-prod/meta/**/*.*", "dest": "meta" },
    { "src": "../src-prod/*", "dest": "" },
    { "src": "lib/source/**/*.*", "dest": "source" },
    { "src": "lib/components/**/*.*", "dest": "components" },
    "!**/*.spec.bs"
  ],
  "plugins": [
    "roku-log-bsc-plugin",
    "maestro-roku-bsc-plugin",
    "./build-scripts/robot-bsc-plugin/plugin.js"
  ],
  "maestro": {
    "excludeFilters": [
      "**/RALETrackerTask.*",
      "**/roku_modules/**/*",
      "**/rooibos-roku/**/*",
      "**/rooibos/**/*"
    ],
    "buildForIDE": false,
    "extraValidation": {
      "doExtraValidation": true,
      "doExtraImportValidation": true
    }
  },
  "rokuLog": {
    "strip": true
  },
  "NOTE:roku-deploy is currently broken and causes a crash when createPackage is true": true,
  "_createPackage": true
}
