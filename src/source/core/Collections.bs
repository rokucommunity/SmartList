    end if
    return result
  end function

  function getSortedArrayByCallFunc(array as mc.types.array, funcName as string, ascending = true as boolean) as mc.types.array
    result = []
    if type(array) = "roSGNode"
      if array.isSubType("mc_Node") or array.subType() = "mc_Node"
