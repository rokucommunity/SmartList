<?xml version='1.0' encoding='UTF-8'?>
<component
    name='mv_NavController'
    extends='mv_BaseAggregateView'>

  <interface>
    <field
        id='numberOfViews'
        type='integer'
        alwaysNotify='true' />
    <field
        id='viewStack'
        type='array' />
    <field
        id='poppedView'
        type='node' />

    <field
        id='pushedView'
        type='node' />

    <!-- events  -->
    <field
        id='isLastViewPopped'
        type='boolean'
        alwaysNotify='true' />


    <!-- public functions -->
    <function name='push' />
    <function name='pop' />
    <function name='replace' />
    <function name='reset' />
  </interface>

</component>