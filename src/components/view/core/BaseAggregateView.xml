<?xml version='1.0' encoding='UTF-8'?>
<component
    name='mv_BaseAggregateView'
    extends='mv_BaseScreen'>
  <interface>
    <field
        id='currentView'
        type='node' />
    <!-- if true, then push/pop/reset will automatically focus the top view -->
    <field
        id='isAutoFocusEnabled'
        type='boolean'
        value='true' />
    <field
        id='shouldRemoveFromAggregateView'
        type='boolean'
        value='false' />
    <field
        id='transition'
        type='node' />
    <field
        id='isDestroyingChildViewsOnRemoval'
        type='boolean'
        value='true' />
    <field
        id='isSettingCurrentViewOnViewStackChange'
        type='boolean'
        value='true' />
    <field
        id='isTransitionManagingChildren'
        type='boolean'
        value='true' />
  </interface>
  <children>
    <Group id='focusTrap' />
  </children>
</component>